    </fieldset>
    <script>
        function getSelectedValues() {
            var selectedValues = [];
            var checkboxes = document.getElementsByName('affiliations[]');

            checkboxes.forEach(function(checkbox) {
                if (checkbox.checked) {
                    selectedValues.push(checkbox.value);
                }
        });

        return selectedValues;
    }
    </script>
    <br>
