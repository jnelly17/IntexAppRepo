<label for="time">What is the average time you spend on social media every day?</label>
<input type="range" id="time" name="time" min="0" max="7" value="0">
<span id="selectedValue">None</span>

<script>
let slider = document.getElementById("time");
let selectedValue = document.getElementById("selectedValue");

slider.addEventListener("input", function() {
    let option = parseInt(slider.value);

    switch (option) {
        case 0:
            selectedValue.textContent = "None";
            break;
        case 1:
            selectedValue.textContent = "< 30 mins";
            break;
        case 2:
            selectedValue.textContent = "30 mins - 1 hr";
            break;
        case 3:
            selectedValue.textContent = "1 - 1.5 hours";
            break;
        case 4:
            selectedValue.textContent = "1.5 - 2 hours";
            break;
        case 5:
            selectedValue.textContent = "2 - 2.5 hours";
            break;
        case 6:
            selectedValue.textContent = "2.5 - 3 hours";
            break;
        default:
            break;
    }
});
</script>
