        <label for="pinterest">Pinterest</label>
        <br>
        <input type="checkbox" id="reddit" name="platforms" value="Reddit">
        <label for="reddit">Reddit</label>
        <br>
        <input type="checkbox" id="youtube" name="platforms" value="YouTube">
        <label for="youtube">YouTube</label>
        <br>
        <input type="checkbox" id="discord" name="platforms" value="Discord">
        <label for="discord">Discord</label>
        <br>
        <input type="checkbox" id="twitter" name="platforms" value="Twitter">
        <label for="twitter">Twitter</label>
    </fieldset>
    <br>
    <br>
    <label for="time">What is the average number of hours you spend on social media every day?</label>
    <input type="range" id="time" name="time" min="0" max="5.5" value="0" step=".5" oninput="updateSliderValue(this.value)" required>
    <span id="sliderValue">0</span> hours
    
    <script>
    function updateSliderValue(value) {
        const sliderValueElement = document.getElementById("sliderValue");
    
        if (value == 5.5) {
            sliderValueElement.innerText = '5+';
        } else {
            sliderValueElement.innerText = value;
        }
    }
    </script>
    <br>
    <br>
