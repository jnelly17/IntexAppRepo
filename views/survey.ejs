        <label for="company">Company</label>
        <br>
        <input type="checkbox" id="private" name="affiliations" value="Private">
        <label for="private">Private Organization</label>
        <br>
        <input type="checkbox" id="govt" name="affiliations" value="Government">
        <label for="private">Government</label>
    </fieldset>
    <br>
    <br>
    <label for="media">Do you use social media?</label>
    <select name="media" id="media" required>
    <option value="Yes">Yes</option>
    <option value="No">No</option>
    </select>
    <br>
    <br>
    <fieldset>
        <legend>What social media platforms do you commonly use? (select all/any that apply)</legend>
    
        <input type="checkbox" id="facebook" name="platforms" value="Facebook">
        <label for="facebook">Facebook</label>
        <br>
        <input type="checkbox" id="instagram" name="platforms" value="Instagram">
